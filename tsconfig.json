{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "noEmitOnError": true,
      "strictPropertyInitialization": false,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/", ".husky/"]
}